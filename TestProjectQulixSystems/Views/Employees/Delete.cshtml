@model TestProjectQulixSystems.Models.Employee
@{
    ViewData["Title"] = "Delete employee";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Surname</dt>
        <dd>
            @Model.Surname
        </dd>

        <dt>Name</dt>
        <dd>
            @Model.Name
        </dd>

        <dt>MiddleName</dt>
        <dd>
            @Model.MiddleName
        </dd>

        <dt>Date</dt>
        <dd>
            @Model.Date
        </dd>

        <dt>Position</dt>
        <dd>
            @Model.Position
        </dd>
    </dl>

    <div>
        <form asp-controller="Employees" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-outline-secondary" value="Delete" />
            </div>
        </form>
        <div>
            <a asp-controller="Employees" asp-action="Index">Return to list</a>
        </div>
    </div>
</div>