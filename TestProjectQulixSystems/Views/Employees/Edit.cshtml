@model TestProjectQulixSystems.Models.Employee
@{
    ViewData["Title"] = "Edit employee";
}
<h2>@ViewData["Title"].</h2>

<form asp-action="Edit" asp-controller="Employees">
    <div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Surname"></label>
            <input required type="text" asp-for="Surname" class="form-control form-control-sm" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input required type="text" asp-for="Name" class="form-control form-control-sm" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MiddleName"></label>
            <input type="text" asp-for="MiddleName" class="form-control form-control-sm" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input required asp-for="Date" class="form-control  form-control-sm" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Position"></label>
            <input required type="text" asp-for="Position" class="form-control form-control-sm" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Company</label>
            <select type="text" asp-for="CompanyId" class="form-control form-control-sm">
                @foreach (var Company in ViewBag.Companies)
                {
                    @if (Company.Id == Model.CompanyId)
                    {
                        <option selected value="@Company.Id">@Company.Name</option>
                    }
                    else
                    {
                        <option value="@Company.Id">@Company.Name</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Employees" asp-action="Index">Return to list</a>
</div>