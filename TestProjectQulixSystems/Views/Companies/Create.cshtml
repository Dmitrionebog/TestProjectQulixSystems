@model TestProjectQulixSystems.Models.Company

@{
    ViewData["Title"] = "New company";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="Companies">
    <div>
        <div class="form-group">
            <label asp-for="Id"></label>
            <input required type="text" asp-for="Id" class="form-control form-control-sm" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input required type="text" asp-for="Name" class="form-control form-control-sm" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LawForm"></label>
            <input required asp-for="LawForm" class="form-control  form-control-sm" />
            <span asp-validation-for="LawForm" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Companies" asp-action="Index">Return to list</a>
</div>