@model TestProjectQulixSystems.Models.Company
@{
    ViewData["Title"] = "Edit company";
}
<h2>@ViewData["Title"].</h2>

<form asp-action="Edit" asp-controller="Companies">
    <div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input required type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LawForm"></label>
            <input required asp-for="LawForm" class="form-control" />
            <span asp-validation-for="LawForm" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Companies" asp-action="Index">Return to list</a>
</div>
